generator client {
  provider = "prisma-client-js"
  // output supprim√© = comportement par d√©faut
}


datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  MANAGER
  TEACHER
  ACCOUNTANT
  RECEPTIONIST
  USER
}

model Etudiant {
  id           Int      @id @default(autoincrement())
  nom          String
  prenom       String
  dateNaissance DateTime
  adresse      String
  niveau       String
  etablissement String
  matieres     String    // or use separate relation table later
  telephone    String
  email        String
  contactParent String
  modePaiement String
  remises      String?   // JSON, or make a proper table later
  documentPath   String?
  classes        Classe[]  @relation("EtudiantClasse")
  createdAt    DateTime  @default(now())
}

model Enseignant {
  id             Int       @id @default(autoincrement())
  nom            String
  prenom         String
  email          String    @unique
  telephone      String
  specialites    String    // comma-separated: "Maths, Fran√ßais"
  niveaux        String    // "Coll√®ge, Lyc√©e"
  disponibilites String    // Ex: "Lundi 14h-18h, Mercredi 10h-12h"
  tarifHoraire   Float
  modePaiement   String
  createdAt      DateTime  @default(now())

  // üîß Add this to complete the relation
  classes        Classe[]
}


model Classe {
  id           Int        @id @default(autoincrement())
  name         String
  matiere      String
  niveau       String
  horaire      String
  enseignantId Int
  enseignant   Enseignant @relation(fields: [enseignantId], references: [id])
  etudiants    Etudiant[] @relation("EtudiantClasse") // <-- NEW
  createdAt    DateTime   @default(now())
}